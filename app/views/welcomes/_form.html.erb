
<%= simple_form_for(@welcome) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :logoimg %>
    <%= f.input :desc %>
    <%= f.input :whatsapp %>
    <%= f.input :ig %>
    <%= f.input :ln %>
    <%= f.input :section %>
    <%= f.input :link %>
    <%= f.input :footer %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :twitter %>
    <%= f.input :email %>
    <%= f.input :youtube %>
    <%= f.input :telegram %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
