<!DOCTYPE html>
<html>
<head>
  <%  @welcomes = Welcome.all  %>
  <% @welcomes.take(1).each do |w| %>
  <title><%= w.title %>  || Authentication </title>
  <meta name="description" content="<%= w.desc %>">
  <% end %>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <meta name="msapplication-TileColor" content="#ffffff">
  <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
  <meta name="theme-color" content="#ffffff">

<style media="screen">
  .w50{ width:50%; }
</style>

</head>

<body class="account-body accountbg" style=" background-color: rgb(18, 29, 51);">

  <% unless flash.empty? %>
  <script type="text/javascript">
    <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>');
    <% end %>
  </script>
  <% end %>

  <% @welcomes = Welcome.all %>
    <% @headers = Header.all %>

  <div class="pattern mb-5 "> 
                  <% if Welcome.exists? %>
                            <% @welcomes.take(1).each do |w| %>
                            <div class="text-center">
                              <%= image_tag w.logoimg_url.to_s, class: "img-fluid text-center  inline-block" %>
                            </div>
                            
                            <% end %>
                            <% else %>
                            <div class="mrg-btm-30">
                              <img class="img-responsive inline-block" src="assets/images/logo/logo.png" alt="">
                              <h2 class="inline-block pull-right no-mrg-vertical pdd-top-15">welcome</h2>
                            </div>
                            <% end %>
                </div>

                 <div class="row mt-5 mb-5 align-middle ">
                            <div class="col-12 align-self-center">

<h3 class="text-white text-center"> Welcome Back </h3>
</div>
</div>
      <!-- Log In page -->
      <div class="row align-middle">
          <div class="col-12 align-self-center">
              <div class="auth-page">

              
                  <div class="card auth-card shadow-lg">
                      <div class="card-body">

                      
                            <%= yield %>

                        </div>
                      </div>
<h5 class="text-white text-center text-muted"> Don't have a Blockchain Account ?
  <span><a href="#" class="text-center text-primary "> Sign up Now </a></span></h5>

                    </div>
                  </div>
                </div>
                
        <div class=" align-middle justify-content-center  text-center">
          <% @welcomes.take(1).each do |w| %>
                            <div class="text-center">
                              <%= image_tag w.bgimg_url.to_s, class: "img-fluid text-center  inline-block" %>
                            </div>
                            
                            <% end %>
        </div>
          



               

  <%= javascript_include_tag 'app' %>

</body>
</html>
